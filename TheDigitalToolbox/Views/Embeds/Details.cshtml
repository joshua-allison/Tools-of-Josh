@model TheDigitalToolbox.Models.Embedded

@{
    ViewData["Title"] = "Details";
}

<div>
    <h3>@Model.Title - Details</h3>
    <a data-btn-edit asp-action="Edit" asp-route-id="@Model.EmbeddedId" asp-route-slug="@Model.Slug">Edit</a>
    <a data-btn-back asp-action="Index">to List</a>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Creator)
        </dd>
        <dt class="col-sm-2">
            Uploaded By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uploader.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShareURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShareURL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd class="col-sm-12 embed-responsive embed-responsive-1by1 content-align-center">
            @Html.Raw(Model.EmbedString)
        </dd>
    </dl>
</div>
