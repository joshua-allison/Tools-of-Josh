@model TheDigitalToolbox.Models.Program

@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.Title - Edit<a class="float-right" data-btn-back asp-action="Index">to List</a></h1>

<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ToolId" />
    <div class="row">
        <div class="form-group col-4">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Language" class="control-label"></label>
            <input asp-for="Language" class="form-control"></input>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Creator" class="control-label"></label>
            <input asp-for="Creator" class="form-control" />
            <span asp-validation-for="Creator" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-12">
            <label asp-for="ShareURL" class="control-label"></label>
            <input asp-for="ShareURL" class="form-control" />
            <span asp-validation-for="ShareURL" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button data-btn-form-save></button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
